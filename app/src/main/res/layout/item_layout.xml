<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">

    <ImageView
        android:layout_width="71dp"
        android:layout_height="93dp"
        android:id="@+id/imageViewPoster"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"

        android:background="@color/button_material_light"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:id="@+id/linearLayout2"
        android:layout_alignTop="@+id/imageViewPoster"
        android:layout_toRightOf="@+id/imageViewPoster"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/button_material_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/textViewTitle"
            android:layout_alignTop="@+id/imageViewPoster"
            android:layout_toRightOf="@+id/imageViewPoster"
            android:layout_toEndOf="@+id/imageViewPoster"
            android:background="@color/abc_secondary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Year"
            android:id="@+id/textViewYear"
            android:layout_below="@+id/textViewTitle"
            android:layout_alignLeft="@+id/textViewTitle"
            android:layout_alignStart="@+id/textViewTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Type"
            android:id="@+id/textViewType"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_alignLeft="@+id/textViewYear"
            android:layout_alignStart="@+id/textViewYear" />
    </LinearLayout>

</LinearLayout>